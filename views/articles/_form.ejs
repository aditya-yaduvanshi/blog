<div class="form-group mb-2">
  <label class="form-label" for="title">Title</label>
  <input type="text" class="form-control" name="title" id="title" required value="<%= article.title %>" />
</div>

<div class="form-group mb-2">
  <label class="form-label" for="description">Description</label>
  <textarea class="form-control" id="description" name="description"><%= article.description %></textarea>
</div>

<div class="form-group mb-2">
  <label class="form-label" for="markdown">Markdown</label>
  <textarea class="form-control" id="markdown" name="markdown" required><%= article.markdown %></textarea>
</div>

<div class="form-group mt-4">
  <a href="/" class="btn btn-secondary">Cancel</a>
  <button type="submit" class="btn btn-primary">Save</button>
</div>
